<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns = "http://www.w3.org/ns/widgets"
    xmlns:gap = "http://phonegap.com/ns/1.0"
    id        = "com.phonegap.picturesPhoneGap"
    version   = "1.0.0">

    <name>PhoneGap Picture CiberApp</name>
    <description>App PhoneGap Toma Fotograf√≠a</description>
    <author href="http://cast-info.es" email="pep.farin@cast-info.es">Dani</author>

    <content src="index.html" />
    <access origin="*" />

    <preference name="permissions" value="none"/>
    <preference name='phonegap-version' value='cli-5.1.1' />
    <preference name="fullscreen" value="true" />
    <preference name="orientation" value="portrait" />
    <preference name="target-device" value="universal"/>
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true"/>
    <preference name="stay-in-webview" value="false"/>
    <preference name="detect-data-types" value="true"/>
    <preference name="exit-on-suspend" value="false"/>
    <preference name="show-splash-screen-spinner" value="true"/>
    <preference name="auto-hide-splash-screen" value="true"/>
    <preference name="disable-cursor" value="false"/>
    <preference name="android-minSdkVersion" value="7"/>
    <preference name="android-installLocation" value="auto"/>

   
    <gap:plugin name="org.apache.cordova.camera" version="0.3.2" />
    <gap:plugin name="org.apache.cordova.vibration" version="0.3.11" />
    
    <icon src="res/icon/android/icon-96-xhdpi.png"  density="xhdpi"/>
    
    <platform name="android">
        <icon src="res/icon/android/icon-36-ldpi.png"  density="ldpi"/>
        <icon src="res/icon/android/icon-48-mdpi.png"  density="mdpi"/>
        <icon src="res/icon/android/icon-72-hdpi.png"  density="hdpi"/>
        <icon src="res/icon/android/icon-96-xhdpi.png"  density="xhdpi"/>
    </platform>
    
</widget>
